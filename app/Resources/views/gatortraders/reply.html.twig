{% extends 'base_login.html.twig' %}

    {% block head %}
        {{ parent() }}

        {% block stylesheets %}
            {{ parent() }}
        {% endblock stylesheets %}

        <style>

            .messagecontainer{
                padding-top: 70px;
            }

        </style>
    {% endblock head %}



{% block body %}

    <body>
    <div class="messagecontainer">

        <div align="center">

            <div class="container">

                <div id="messagebox" style="margin-top:50px;"

                     class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">

                    <div class="panel panel-default">

                        <div class="panel-heading">

                            <div class="panel-title">Replying to </div>
                            <p>{{ messageTable.subject }}</p>
                        </div>

                        <div style="padding-top:30px" class="panel-body">

                            <div style="display:none" id="login-alert" class="alert alert-danger col-sm-12"></div>


                            <form action=reply id="message_form" class="form-horizontal" role="form" method="get">

                                <div style="margin-bottom: 25px" class="input-group">
                                    <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                                    <input id="sender" type="text" class="form-control" name="sender" value="Sender: {{ senderUsername }}" readonly>
                                </div>

                                <div style="margin-bottom: 25px" class="input-group">
                                    <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                                    <input id="sender" type="text" class="form-control" name="sender" value="Receiver: {{ messageTable.senderUsername }}" readonly>
                                </div>

                                <div style="margin-bottom: 25px" class="input-group">
                                    <span class="input-group-addon"><i class="glyphicon glyphicon-pencil"></i></span>
                                    <input id="subject" type="text" class="form-control" name="subject" placeholder="subject">
                                </div>


                                <div style="margin-bottom: 25px" class="input-group">
                                    <span class="input-group-addon"><i class="glyphicon glyphicon-envelope"></i></span>
                                    <textarea id="sender_message" type="text" class="form-control" name="sender_message" placeholder="type your message here.."></textarea>
                                </div>


                                <div style="margin-top:10px" class="form-group">
                                    <!-- Button -->

                                    <button class="delete-button btn btn-primary" name="message_replay" value={{ messageTable.getIdmessage }}>
                                        Reply
                                    </button>

                                </div>
                                <p>{{ error }}</p>

                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </body>


{% endblock body %}

{% block javascripts %}
    {{ parent() }}

{% endblock javascripts %}

