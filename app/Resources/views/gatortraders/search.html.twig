
{% block head %}

    <title>{% block title %}Search{% endblock title %}</title>

    {% block stylesheets %}

        <style>
            #imaginary_container {
                margin-top: 20%; /* Don't copy this */
            }
            .stylish-input-group .input-group-addon {
                background: white !important;
            }
            .stylish-input-group .form-control {
                border-right: 0;
                box-shadow: 0 0 0;
                border-color: #ccc;
            }
            .stylish-input-group button {
                border: 0;
                background: transparent;
            }
        </style>

        <!-- Latest compiled and minified CSS -->
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css"
              integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u"
              crossorigin="anonymous">

        <style>

            .dropdown-menu {
                width: 245px;
            }

            .navbar-brand>img {
                height:49px;
                width: auto;
                margin-top: -14px;
            }
        </style>



    {% endblock stylesheets %}

{% endblock head %}

{% block body %}

    <!--Kendricks old VP search bar
    <form action="results" method="get">
        <input type="text" name="name">
        <input type="submit">
    </form>-->

    <div class="row">
        <form action="results" method="get">
            <div class="col-sm-6 col-sm-offset-3">
                <div id="imaginary_container">
                    <div class="col-sm-3">
                        <select class="form-control" id="category" name="category" placeholder="Category" required="true">
                            <option name="All">All</option>
                            <option name="Birds">Birds</option>
                            <option name = "Supplies">Supplies</option>
                            <option name = "Clothing">Clothing</option>
                            <option name = "Electronic">Electronic</option>
                            <option name = "Books">Books</option>
                        </select>
                    </div>
                    <div class="input-group stylish-input-group">
                        <input type="text" class="form-control" name="search_term" placeholder="Search">
                        <span class="input-group-addon">
                            <button type="submit">
                        </button>
                    </span>
                    </div>
                </div>
            </div>

        </form>
    </div>
{% endblock body %}

{% block javascripts %}
    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>

    <!-- Latest compiled and minified JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"
            integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa"
            crossorigin="anonymous"></script>
{% endblock %}