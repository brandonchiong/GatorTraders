{% extends template %}

    {% block head %}
        {{ parent() }}

        <title>{% block title %}Post{% endblock title %}</title>


        <style>
            body {
                padding-top: 80px;
            }

            .title {
                margin-top: 50px;
                margin-bottom: -80px;
            }

            .list_container{
                margin-top: 20px;
                margin-left: 200px;
                margin-right: 200px;

            }

        </style>
    {% endblock head %}


{% block body %}

    <h1 class="title" align="center">GatorTraders</h1>

    <body>

    <div class="list_container">

        <div class="row">
            <div class="col-lg-12">

            </div>
        </div>
        <!-- /.row -->


        {% for key in viewUserDets %}

            {% if (searchkey == key.getPostid) %}
                <!-- Portfolio Item Row -->
                <div class="row">

                    <div class="col-md-8">
                        <img class="img-responsive" height="360" width="360" src="{{ key.getImagePath()}}" alt="">
                    </div>

                    <div>
                        <h3>{{ key.getPosttitle()}}</h3>
                        <h4>Price : ${{ key.getPrice }}</h4>
                        <p>Description : {{  key.getDescription }}</p>
                    </div>
                </div>

                <form action=message method="GET">
                    <button type="submit" class="message_button" name="postId" value={{ key.getPostId }}>
                        Message seller
                    </button>
                </form>
            {% endif %}
        {% endfor %}



    </div>
    </body>

{% endblock body %}

{% block javascripts %}
    {{ parent() }}

{% endblock javascripts %}